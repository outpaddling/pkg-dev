#!/bin/sh -e

if [ $# -gt 1 ]; then
    printf "Usage: $0 [dir]\n"
    exit 1
fi

if [ `uname` = 'NetBSD' ]; then
    make='make'
else
    make='bmake'
fi

if [ $# = 1 ]; then
    cd $1
fi

printf "Remove distfile? y/[n] "
read remove
$make deinstall
if [ 0$remove = 0y ]; then
    $make distclean
else
    $make clean
fi
$make install

